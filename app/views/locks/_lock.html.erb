<div class="alert alert-warning">
  <% if lock.warning? %>
    <%= warning_icon %> <%= lock.affected %> Warning:
  <% else %>
    <%= lock_icon %> Deployments to <%= lock.affected %> were locked
  <% end %>
  <%= sanitize lock.reason %> by <%= lock.locked_by %> <%= render_time lock.created_at %>
  ago <%= lock.expire_summary { |t| render_time(t) } %>.
</div>
