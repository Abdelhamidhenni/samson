<fieldset>
  <div class="form-group">
    <%= form.label :name, "Name", class: "col-lg-2 control-label" %>
    <div class="col-lg-4">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :env_value, "Value in $DEPLOY_GROUPS", class: "col-lg-2 control-label" %>
    <div class="col-lg-4">
      <%= form.text_field :env_value, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :name, "Environment", class: "col-lg-2 control-label" %>
    <div class="col-lg-4">
      <%= form.collection_select(:environment_id, Environment.all, :id, :name, {}, { class: 'form-control' }) %>
    </div>
  </div>

  <% if Samson::Hooks.active_plugin?('kubernetes') %>
    <div class="form-group">
      <%= form.label :kubernetes_cluster, "Kubernetes Cluster", class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= form.collection_select(:kubernetes_cluster_id, Kubernetes::Cluster.all, :id, :name, { include_blank: true }, { class: 'form-control' }) %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :kubernetes_namespace, "Kubernetes Namespace", class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= form.text_field :kubernetes_namespace, class: "form-control" %>
      </div>
    </div>
  <% end %>
</fieldset>
