<% flash_mapping.each do |type, klass| %>
  <% if messages = flash[type] %>
    <% Array.wrap(messages).each do |message| %>
      <div class="alert alert-<%= klass %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= message %>
        <% if type == :authorization_error && ENV['REQUEST_ACCESS_FEATURE'].present? %>
          <%= link_to 'Request access.', new_access_request_path %>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>
