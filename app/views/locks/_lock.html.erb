<div class="alert alert-warning">
  <% if lock.warning? %>
    <%= warning_icon %> Warning:
  <% else %>
    <%= lock_icon %> Deployments to <%= lock.affected %> were locked
  <% end %>
  <%= lock.reason %> by <%= lock.locked_by %> <%= time_ago_in_words(lock.created_at) %>
  ago<%= lock.unlock_summary %>.
</div>
