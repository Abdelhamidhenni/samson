<% role = user.project_role_for(project) %>
<project-roles roles="roles" role-changed="roleChanged(project_role)"
               data-id="<%= role.try(:id) %>"
               data-user-id="<%= user.id %>"
               data-user-name="<%= user.name %>"
               data-project-id="<%= project.id %>"
               data-project-name="<%= project.name %>"
               data-role-id="<%= role.try(:role_id) %>">
</project-roles>
