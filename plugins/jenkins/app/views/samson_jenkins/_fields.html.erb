<fieldset>
  <legend>Jenkins</legend>
  <p class="col-lg-offset-2">Jenkins jobs that should run after this stage gets deployed. (comma separated)</p>

  <div class="form-group">
    <div class="col-lg-6 col-lg-offset-2">
      <%= form.text_field :jenkins_job_names, class: "form-control", placeholder: "Jenkins jobs" %>
    </div>
  </div>

  <%= form.input :jenkins_email_committers, as: :check_box, label: "Jenkins sends email to committers" %>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10 checkbox">
      <%= form.label :jenkins_autoconfig_buildparam do %>
        <%= form.check_box :jenkins_autoconfig_buildparams %>
          Should Samson automatically configure Jenkins Jobs for build params
      <%= additional_info "Samson can send some meta-data like buildStartedBy, emails etc which can be used by a jenkins job.These values are sent as build parameters. Checking this box allows Samson to add required build parameters to the jenkins job." %>
      <% end %>
    </div>
  </div>

</fieldset>
